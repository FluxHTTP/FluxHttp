{
  "reporter": ["text", "html", "lcov"],
  "reports-dir": "coverage",
  "temp-directory": ".nyc_output",
  "clean": true,
  "exclude": [
    "tests/**/*",
    "scripts/**/*", 
    "node_modules/**/*",
    "**/*.d.ts",
    "**/*.test.{js,ts}",
    "**/*.spec.{js,ts}",
    "coverage/**/*",
    ".nyc_output/**/*"
  ],
  "include": [
    "src/**/*"
  ],
  "extension": [
    ".js",
    ".ts"
  ],
  "all": true,
  "check-coverage": false,
  "lines": 0,
  "functions": 0,
  "branches": 0,
  "statements": 0
}
